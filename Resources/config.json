{
  "path": {
    "src": "./src",
    "output": "./public",
    "bower_components": "../../src/bower_components",
    "vendors": "../../src/vendors"
  },
  "build": {
    "js": {
      "src": "@{path.src}/js/app.js",
      "output": "@{path.output}/javascript"
    },
    "sass": {
      "src": {
        "bundle": "@{path.src}/sass/main.scss",
        "themes": "@{path.src}/sass/layout/themes/*.scss",
        "pages": "@{path.src}/sass/pages/*.css"
      },
      "output": {
        "bundle": "@{path.output}/stylesheets",
        "themes": "@{path.output}/stylesheets/themes",
        "pages": "@{path.output}/stylesheets/pages"
      }
    }
  }
}
