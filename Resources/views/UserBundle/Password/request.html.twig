{% extends '@HarmonyAdmin/default/layout.html.twig' %}

{% block content_title %}{{ 'password.reset.title'|trans({}, 'UserBundle') }}{% endblock content_title %}

{% block body %}
  <body class="bg-silver-300">
    <div class="container">
      <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto mt-5">
          <div class="text-center">
            <h1 class="font-bold">HarmonyAdmin</h1>
          </div>
          <div class="card my-5">
            <div class="card-body">
              {{ form_start(form, { method: 'POST', action: path('harmony_user_password_request_send') }) }}
              <h2 class="card-title">{{ 'user.forgot_password'|trans }}</h2>
              <p class="m-b-20">
                Enter your username or email address below and we'll send you password reset instructions.
              </p>
              <div class="form-group">
                {{ form_widget(form.username, { 'attr': { 'class': 'form-control' } }) }}
              </div>
              <div class="form-group">
                {{ form_widget(form._token) }}
                <button class="btn btn-info btn-block"
                        type="submit">{{ 'password.request.button'|trans({}, 'UserBundle') }}</button>
              </div>
              {{ form_end(form) }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
{% endblock body %}