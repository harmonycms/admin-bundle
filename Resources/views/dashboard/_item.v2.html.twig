<div class="col-md-3 col-sm-6 col-xs-12">
  <div class="info-box bg-{{ item.css_class|default('aqua') }}">
    <span class="info-box-icon"><i class="fa fa-{{ item.icon|default('bars') }}"></i></span>
    <div class="info-box-content">
      <a href="{{ path('admin_model', { model: item.model, action: 'list' }) }}">
        <span class="info-box-text text-white">{{ item.label|default('items')|trans }}</span>
      </a>
      <span class="info-box-number">{{ item.count }}</span>
    </div>
    <!-- /.info-box-content -->
  </div>
</div>