{% form_theme form with harmony_admin_config('design.form_theme') %}

{% set _entity_config = harmony_admin_entity(app.request.get('entity')) %}
{% set _entity_id = attribute(entity, _entity_config.primary_key_field_name) %}
{% trans_default_domain _entity_config.translation_domain %}
{% set _trans_parameters = { '%entity_name%': _entity_config.name|trans, '%entity_label%': _entity_config.label|trans, '%entity_id%': _entity_id } %}

{% extends _entity_config.templates.layout %}

{% block body_id 'harmony_admin-edit-' ~ _entity_config.name ~ '-' ~ _entity_id %}
{% block body_class 'edit edit-' ~ _entity_config.name|lower %}

{% block content_title %}
  {% spaceless %}
    {% set _default_title = 'edit.page_title'|trans(_trans_parameters, 'HarmonyAdminBundle') %}
    {{ _entity_config.edit.title is defined ? _entity_config.edit.title|trans(_trans_parameters) : _default_title }}
  {% endspaceless %}
{% endblock %}

{% block main %}
  {% block entity_form %}
    {{ form(form, { 'attr': { 'class': 'card' } }) }}
  {% endblock entity_form %}

  {% block delete_form %}
    {{ include('@HarmonyAdmin/default/includes/_delete_form.html.twig', {
      view: 'edit',
      referer: app.request.query.get('referer', ''),
      delete_form: delete_form,
      _translation_domain: _entity_config.translation_domain,
      _trans_parameters: _trans_parameters,
      _entity_config: _entity_config,
    }, with_context = false) }}
  {% endblock delete_form %}
{% endblock %}

{% block body_javascript %}
  {{ parent() }}
  <script src="{{ asset('bundles/harmonyadmin/javascript/jquery.are-you-sure.min.js') }}"></script>
  <script type="text/javascript">
    $(function () {
      $('.edit-form').areYouSure({'message': '{{ 'form.are_you_sure'|trans({}, 'HarmonyAdminBundle')|e('js') }}'});

      // $('.form-actions').harmonyAdminSticky();

      $('a.action-delete').on('click', function (e) {
        e.preventDefault();

        $('#modal-delete').modal({backdrop: true, keyboard: true})
          .off('click', '#modal-delete-button')
          .on('click', '#modal-delete-button', function () {
            $('#delete-form').trigger('submit');
          });
      });
    });
  </script>
  {{ include('@HarmonyAdmin/default/includes/_select2_widget.html.twig') }}
{% endblock %}
