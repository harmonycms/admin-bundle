{% trans_default_domain 'HarmonyAdminBundle' %}

<button type="button" data-toggle="modal" data-target="#deleteParameter{{ parameter.id }}"
        class="btn btn-danger btn-sm clickable" title="{{ 'action.delete'|trans }}">
  <i class="fas fa-trash-alt"></i>
</button>

<div class="modal fade" id="deleteParameter{{ parameter.id }}" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    {{ form_start(form, { 'attr': { 'class': 'modal-content' } }) }}
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLabel">{{ 'settings.parameter.delete'|trans }}</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <p>{{ 'settings.parameter.delete.text'|trans({ '%name%': parameter.name })|raw }}</p>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'action.close'|trans }}</button>
      {{ form_widget(form.submit, { 'attr': { 'class': 'btn btn-danger' }, 'label': 'action.delete', 'translation_domain': 'HarmonyAdminBundle' }) }}
    </div>
    {{ form_end(form) }}
  </div>
</div>
